<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta name="Description" content="@Html.Render("Description")">
    <meta name="Keywords" content="@Html.Render("Keywords")">
    <title>@Html.Render("Title")</title>
    <link rel="stylesheet" href="/content/css/main.min.css">
    <link href="/content/js/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
<div id="container-fluid">
    <div class="row">
        <div class="col-lg-12 center">
            <h1>@Html.Render("Title")</h1>

            @if (Html.Evaluate("Show", "True"))
            {
                <p>
                    @Html.Render("MainText")
                </p>
            }

            @Html.Render("Number")
        </div>

        @Html.Render("Image")
    </div>
</div>
</body>
</html>